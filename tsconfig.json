{
    "compilerOptions": {
        "lib": ["ESNext"],
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "bundler",
        "moduleDetection": "force",
        "allowImportingTsExtensions": true,
        "strict": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "jsx": "preserve",
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "noEmit": true,
        "types": [
            "bun-types", // add Bun global
            "./types/acorn.d.ts",
            "./types/es2022.d.ts",
            "./types/util.d.ts"
        ]
    },
    "exclude": ["./chunks/*"]
}
